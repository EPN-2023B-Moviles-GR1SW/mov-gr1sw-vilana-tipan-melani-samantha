<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crud_automovil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudTienda">

    <TextView
        android:id="@+id/txt_titulo_tienda"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Tienda"
        android:textColor="#FF5722"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <EditText
        android:id="@+id/input_fecha_tienda"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Ingrese la fecha (dd/MM/yyyy)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_direccion_tienda"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_direccion_tienda"
        app:layout_constraintTop_toBottomOf="@+id/input_direccion_tienda" />

    <EditText
        android:id="@+id/input_direccion_tienda"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Ingrese la direcciÃ³n"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_tienda"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_tienda"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_tienda" />


    <EditText
        android:id="@+id/input_nombre_tienda"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Ingrese el nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo_tienda"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo_tienda"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_tienda" />

    <Button
        android:id="@+id/btn_crear_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#61FF5722"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707" />

    <Button
        android:id="@+id/btn_actualizar_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#C18BC34A"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_tienda"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_tienda"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_tienda" />

</androidx.constraintlayout.widget.ConstraintLayout>