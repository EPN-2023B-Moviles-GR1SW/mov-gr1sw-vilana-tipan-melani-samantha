<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_Prod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.ProdActivity">


    <Button
        android:id="@+id/btn_crearProducto"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:layout_marginStart="12dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tiendaSelected"
        app:layout_constraintStart_toEndOf="@+id/tv_tiendaSelected"
        app:layout_constraintTop_toTopOf="@+id/tv_tiendaSelected"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:id="@+id/tv_tiendaSelected"
        android:layout_width="164dp"
        android:layout_height="170dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="TIENDA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_productos"
        app:layout_constraintEnd_toEndOf="@+id/lv_productos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lv_productos" />

    <ListView
        android:id="@+id/lv_productos"
        android:layout_width="319dp"
        android:layout_height="439dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815" />

</androidx.constraintlayout.widget.ConstraintLayout>