<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AccesoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="414dp"
        android:layout_height="131dp"
        android:background="@drawable/rectangle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Acceso"
        app:titleMarginStart="20dp"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/p_ma_passw"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#CACACA"
        app:layout_constraintBottom_toTopOf="@+id/btn_ma_ingresar"
        app:layout_constraintEnd_toEndOf="@+id/btn_ma_ingresar"
        app:layout_constraintStart_toStartOf="@+id/btn_ma_ingresar" />

    <EditText
        android:id="@+id/pt_ma_correo"
        android:layout_width="322dp"
        android:layout_height="52dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Correo Electr칩nico"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#CACACA"
        app:layout_constraintBottom_toTopOf="@+id/p_ma_passw"
        app:layout_constraintEnd_toEndOf="@+id/p_ma_passw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/p_ma_passw" />

    <TextView
        android:id="@+id/tv_ma_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="28dp"
        android:text="Correo electr칩nico:"
        android:textColor="#2196F3"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/pt_ma_correo"
        app:layout_constraintEnd_toEndOf="@+id/pt_ma_correo" />

    <TextView
        android:id="@+id/tv_ma_passw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Contrase침a:"
        android:textColor="#2196F3"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/p_ma_passw"
        app:layout_constraintEnd_toEndOf="@+id/p_ma_passw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/p_ma_passw" />

    <Button
        android:id="@+id/btn_ma_ingresar"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_marginBottom="248dp"
        android:text="Ingresar"
        android:background="@drawable/rounded_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ma_regist"
        android:layout_width="169dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="Registrarse"
        android:background="@drawable/rounded_button_background"
        app:layout_constraintEnd_toEndOf="@+id/btn_ma_ingresar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_ma_ingresar"
        app:layout_constraintTop_toBottomOf="@+id/btn_ma_ingresar" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rectangle3" />

</androidx.constraintlayout.widget.ConstraintLayout>