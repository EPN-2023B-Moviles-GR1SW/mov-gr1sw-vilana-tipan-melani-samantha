<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crud_automovil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crud.CrudProducto">

    <TextView
        android:id="@+id/tv_titulo_automoviles"
        android:layout_width="129dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Automovil"
        android:textColor="#00BCD4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/input_modelo"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Ingrese el modelo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_automoviles"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_automoviles"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_automoviles" />

    <EditText
        android:id="@+id/input_autos_disponibles"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="212dp"
        android:ems="10"
        android:hint="Ingrese la cantidad disponible"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_automoviles"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_automoviles"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_automoviles" />

    <EditText
        android:id="@+id/input_precio"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="Ingrese el precio"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_automoviles"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_automoviles"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_automoviles" />

    <Button
        android:id="@+id/btn_crear_automovil"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginTop="348dp"
        android:backgroundTint="#00BCD4"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_automoviles"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_automoviles"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_automoviles" />

    <Button
        android:id="@+id/btn_actualizar_automovil"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginTop="416dp"
        android:backgroundTint="#BE8BC34A"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_automoviles"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_automoviles"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_automoviles" />

</androidx.constraintlayout.widget.ConstraintLayout>